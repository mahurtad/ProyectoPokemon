<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.pokemon.AboutActivity"
    android:background="@drawable/ic_font4"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:id="@+id/linearLayout2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@mipmap/ic_icono2"
            android:layout_gravity="center_vertical|right"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_weight="4.96"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="73dp"
        android:id="@+id/linearLayout3"></LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/linearLayout4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Facebook"
            android:src="@mipmap/ic_facebook"
            android:layout_gravity="center_vertical|right"
            android:onClick="facebookApp"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Gplus"
            android:src="@mipmap/ic_gplus"
            android:layout_gravity="center_vertical|right"
            android:onClick="gplusApp"
            android:layout_alignTop="@+id/Twitter"
            android:layout_toRightOf="@+id/Twitter"
            android:layout_toEndOf="@+id/Twitter" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Twitter"
            android:src="@mipmap/ic_twitter"
            android:layout_gravity="center_vertical|right"
            android:onClick="twitterApp"
            android:layout_alignTop="@+id/Facebook"
            android:layout_toRightOf="@+id/Facebook"
            android:layout_toEndOf="@+id/Facebook" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Youtube"
            android:src="@mipmap/ic_youtube"
            android:layout_gravity="center_vertical|right"
            android:onClick="youtubeApp"
            android:layout_alignTop="@+id/Gplus"
            android:layout_toRightOf="@+id/Gplus"
            android:layout_toEndOf="@+id/Gplus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Siguenos en :"
            android:id="@+id/textView2"
            android:textColor="#f9050505"
            android:layout_above="@+id/Gplus"
            android:layout_alignRight="@+id/Gplus"
            android:layout_alignEnd="@+id/Gplus"
            android:textIsSelectable="false"
            android:textSize="15dp" />

    </RelativeLayout>


</RelativeLayout>
