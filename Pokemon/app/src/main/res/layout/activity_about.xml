<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.pokemon.AboutActivity"
    android:background="@drawable/ic_font4"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:id="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@mipmap/ic_icono2"
            android:layout_gravity="center_vertical|right"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TrivPock"
            android:id="@+id/textView4"
            android:textColor="#ffffffff"
            android:layout_marginTop="55dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout">

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="\n   Vásquez García Andrés
                             \n   Montero León Carlos
                        \n   Manuel Hurtado Alzamora
               \n   Guanilo Barragán Alejandro
               \n
               \n
               \n
               \n                      v1.1"
            android:id="@+id/textView3"
            android:textSize="13dp"
            android:layout_marginLeft="79dp"
            android:layout_marginStart="79dp"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Creadores :"
            android:id="@+id/textView6"
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            android:layout_below="@+id/imageButton"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/linearLayout4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Facebook"
            android:src="@mipmap/ic_facebook"
            android:layout_gravity="center_vertical|right"
            android:onClick="facebookApp"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Gplus"
            android:src="@mipmap/ic_gplus"
            android:layout_gravity="center_vertical|right"
            android:onClick="gplusApp"
            android:layout_alignTop="@+id/Twitter"
            android:layout_toRightOf="@+id/Twitter"
            android:layout_toEndOf="@+id/Twitter" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Twitter"
            android:src="@mipmap/ic_twitter"
            android:layout_gravity="center_vertical|right"
            android:onClick="twitterApp"
            android:layout_alignTop="@+id/Facebook"
            android:layout_toRightOf="@+id/Facebook"
            android:layout_toEndOf="@+id/Facebook" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Youtube"
            android:src="@mipmap/ic_youtube"
            android:layout_gravity="center_vertical|right"
            android:onClick="youtubeApp"
            android:layout_alignTop="@+id/Gplus"
            android:layout_toRightOf="@+id/Gplus"
            android:layout_toEndOf="@+id/Gplus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Siguenos en :"
            android:id="@+id/textView2"
            android:textColor="#ffffffff"
            android:layout_above="@+id/Gplus"
            android:layout_alignRight="@+id/Gplus"
            android:layout_alignEnd="@+id/Gplus"
            android:textIsSelectable="false"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Todos los derechos reservados : "
            android:id="@+id/textView5"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/Facebook"
            android:layout_alignStart="@+id/Facebook" />

    </RelativeLayout>


</RelativeLayout>
