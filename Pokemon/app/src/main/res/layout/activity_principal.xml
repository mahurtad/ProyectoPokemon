<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PrincipalActivity"
    android:background="@drawable/ic_font2">

    <Button
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:text="@string/menu_jugar"
        android:id="@+id/btnJugar"
        android:onClick="irJugar"
        android:layout_above="@+id/btnLista"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:text="@string/menu_Otro"
        android:id="@+id/btnLista"
        android:onClick="galeriaApp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnJugar"
        android:layout_alignStart="@+id/btnJugar" />

    <Button
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:text="@string/menu_acerca"
        android:id="@+id/btnAcerca"
        android:layout_marginTop="52dp"
        android:onClick="aboutApp"
        android:layout_below="@+id/btnLista"
        android:layout_alignLeft="@+id/btnLista"
        android:layout_alignStart="@+id/btnLista" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_banner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnJugar" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnAcerca">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Facebook"
            android:src="@mipmap/ic_facebook"
            android:layout_gravity="center_vertical|right"
            android:onClick="facebookApp"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Gplus"
            android:src="@mipmap/ic_gplus"
            android:layout_gravity="center_vertical|right"
            android:onClick="gplusApp"
            android:layout_alignTop="@+id/Twitter"
            android:layout_toRightOf="@+id/Twitter"
            android:layout_toEndOf="@+id/Twitter" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Twitter"
            android:src="@mipmap/ic_twitter"
            android:layout_gravity="center_vertical|right"
            android:onClick="twitterApp"
            android:layout_alignTop="@+id/Facebook"
            android:layout_toRightOf="@+id/Facebook"
            android:layout_toEndOf="@+id/Facebook" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Youtube"
            android:src="@mipmap/ic_youtube"
            android:layout_gravity="center_vertical|right"
            android:onClick="youtubeApp"
            android:layout_alignTop="@+id/Gplus"
            android:layout_toRightOf="@+id/Gplus"
            android:layout_toEndOf="@+id/Gplus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Siguenos :"
            android:id="@+id/textView2"
            android:textColor="#f9050505"
            android:layout_above="@+id/Gplus"
            android:layout_alignRight="@+id/Gplus"
            android:layout_alignEnd="@+id/Gplus" />

    </RelativeLayout>


</RelativeLayout>
